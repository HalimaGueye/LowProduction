{% extends 'base.html.twig' %}

{% block title %}
	Hello BlogController!


{% endblock %}

{% block head %}
	<style></style>
{% endblock %}

{% block body %}
	{{ dump(video) }}
	<section class="m-5">
    {% for video in video %}
		<div class="card" style="width: 30rem; height: 20rem">
			<iframe style="height: 70%" src="{{video.url}}" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowfullscreen ></iframe>
			<h3 class="card-title m-3">{{video.name}}</h3>
        <h6 class="card-subtitle m-3">{{video.project.name}}</h3>
			<div class="card-body">
				<p class="card-text"># {{video.licence}}</p>
			</div>
		</div>
    {% endfor %}
	</section>
{% endblock %}
