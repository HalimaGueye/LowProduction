{% extends 'base.html.twig' %}

{% block title %}
	Hello BlogController!


{% endblock %}

{% block head %}
	<style></style>
{% endblock %}

{% block body %}
{{ dump(portfolio) }}
{% for portfolio in portfolio %}


	<div class="card mb-3" style="margin : 40px;margin-right: 50%; marging-left: 50%" bis_skin_checked="1">

		{% if portfolio.member.memberPicture is not null %}
			<img src="/uploads/images/{{portfolio.member.memberPicture.image}}" class="img-fluid" alt="{{ portfolio.member.name }}">
		{% endif %}
		<div class="card-body" bis_skin_checked="1">
			<h3>{{portfolio.member.name}}</h3>
			<h6 class="mb-3">
		<i class="fas fa-envelope"></i>
		{{portfolio.member.courriel}}</h6>
			<a href="#"><h6 class="card-subtitle text-muted">
				<img width="30" src="/uploads/images/icones/{{portfolio.portfolioType.icone}}" class="img-thumbnail" alt="...">

				{{portfolio.portfolioType.name}}</h6></a>

			<p class="card-text">{{portfolio.member.description | raw}}</p>
		</div>
		<div class="card-body" bis_skin_checked="1">
			<a href="{{portfolio.url}}" class="card-link">{{portfolio.url}}</a>
		</div>
	</div>

</div>{% endfor %}{% endblock %}
